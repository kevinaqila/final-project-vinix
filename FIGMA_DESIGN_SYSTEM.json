  "gradients": {
    "backgroundPage": {
      "type": "linear",
      "direction": "to-br",
      "angle": 315,
      "stops": [
        { "color": "#f8fafc", "position": 0, "name": "Slate-50" },
        { "color": "#eff6ff", "position": 50, "name": "Blue-50" },
        { "color": "#f0fdf4", "position": 100, "name": "Green-50" }
      ]
    },
    "buttonPrimary": {
      "type": "linear",
      "direction": "to-r",
      "angle": 90,
      "stops": [
        { "color": "#16a34a", "position": 0, "name": "Green-600" },
        { "color": "#22c55e", "position": 100, "name": "Green-500" }
      ],
      "hoverStops": [
        { "color": "#15803d", "position": 0, "name": "Green-700" },
        { "color": "#16a34a", "position": 100, "name": "Green-600" }
      ]
    },
    "featureSection": {
      "type": "linear",
      "direction": "to-br",
      "angle": 315,
      "stops": [
        { "color": "#16a34a", "position": 0, "name": "Green-600" },
        { "color": "#22c55e", "position": 50, "name": "Green-500" },
        { "color": "#14b8a6", "position": 100, "name": "Teal-500" }
      ]
    },
    "ctaSection": {
      "type": "linear",
      "direction": "to-r",
      "angle": 90,
      "stops": [
        { "color": "#16a34a", "position": 0, "name": "Green-600" },
        { "color": "#166534", "position": 100, "name": "Green-800" }
      ]
    }
  },
  "typography": {
    "fontFamily": "Inter, system-ui, Segoe UI, sans-serif",
    "headings": [
      {
        "name": "H1",
        "size": 48,
        "weight": 700,
        "lineHeight": 1.2,
        "letterSpacing": -0.02
      },
      {
        "name": "H2",
        "size": 36,
        "weight": 700,
        "lineHeight": 1.2,
        "letterSpacing": -0.02
      },
      {
        "name": "H3",
        "size": 30,
        "weight": 700,
        "lineHeight": 1.3,
        "letterSpacing": -0.01
      },
      {
        "name": "H4",
        "size": 24,
        "weight": 700,
        "lineHeight": 1.4,
        "letterSpacing": 0
      },
      {
        "name": "H5",
        "size": 20,
        "weight": 600,
        "lineHeight": 1.4,
        "letterSpacing": 0
      }
    ],
    "body": [
      {
        "name": "Body-lg",
        "size": 18,
        "weight": 400,
        "lineHeight": 1.75
      },
      {
        "name": "Body",
        "size": 16,
        "weight": 400,
        "lineHeight": 1.5
      },
      {
        "name": "Body-sm",
        "size": 14,
