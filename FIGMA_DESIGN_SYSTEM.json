{
  "project": "FinancePro",
  "version": "2.0.0",
  "lastUpdated": "2025-11-19",
  "description": "Complete design system for FinancePro platform including all pages and components",
  "colors": {
    "primary": {
      "green-50": "#f0fdf4",
      "green-100": "#dcfce7",
      "green-500": "#22c55e",
      "green-600": "#16a34a",
      "green-700": "#15803d",
      "green-800": "#166534"
    },
    "secondary": {
      "blue-500": "#3b82f6",
      "blue-600": "#2563eb",
      "blue-700": "#1d4ed8",
      "blue-100": "#dbeafe",
      "purple-500": "#8b5cf6",
      "purple-600": "#7c3aed",
      "purple-100": "#ede9fe",
      "amber-500": "#f59e0b",
      "amber-600": "#d97706",
      "amber-100": "#fef3c7"
    },
    "neutral": {
      "white": "#ffffff",
      "gray-50": "#f9fafb",
      "gray-100": "#f3f4f6",
      "gray-200": "#e5e7eb",
      "gray-300": "#d1d5db",
      "gray-400": "#9ca3af",
      "gray-500": "#6b7280",
      "gray-600": "#4b5563",
      "gray-700": "#374151",
      "gray-800": "#1f2937",
      "gray-900": "#111827"
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, #22c55e 0%, #16a34a 100%)",
    "hero": "linear-gradient(135deg, #f9fafb 0%, #dcfce7 100%)",
    "cta": "linear-gradient(135deg, #16a34a 0%, #15803d 100%)",
    "cardHover": "linear-gradient(135deg, #f3f4f6 0%, #ffffff 100%)"
  },
  "typography": {
    "fontFamily": "Inter, system-ui, -apple-system, sans-serif",
    "sizes": {
      "hero": "text-5xl lg:text-6xl (48px-60px)",
      "section": "text-4xl (36px)",
      "card": "text-2xl (24px)",
      "large": "text-xl (20px)",
      "regular": "text-lg (18px)",
      "small": "text-base (16px)",
      "label": "text-sm (14px)",
      "caption": "text-xs (12px)"
    },
    "weights": {
      "bold": "font-bold (700)",
      "medium": "font-medium (500)",
      "normal": "font-normal (400)"
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "usedIn": ["LoginPage", "SignUpPage", "HomePage", "Dashboard", "ServiceDetailPage"],
        "styles": "bg-linear-to-r from-green-600 to-green-700 rounded-xl shadow-lg hover:scale-105",
        "text": "white font-bold",
        "padding": "px-6 py-3"
      },
      "secondary": {
        "usedIn": ["HomePage", "Service cards", "ProfilePage"],
        "styles": "bg-white border-2 border-gray-300 rounded-xl hover:border-green-600",
        "text": "gray-900 font-bold",
        "padding": "px-6 py-3"
      },
      "categoryPills": {
        "usedIn": ["ServicesPage", "ProfilePage"],
        "styles": "bg-gray-100 hover:bg-gray-200 rounded-lg transform hover:scale-105",
        "active": "bg-linear-to-r from-green-600 to-green-700 text-white"
      },
      "modalButtons": {
        "usedIn": ["ConfirmModal", "InputModal"],
        "cancel": "gray border",
        "confirm": "green/blue/red variants"
      }
    },
    "inputs": {
      "search": {
        "usedIn": ["ClientDashboard", "ServicesPage", "MessagesPage"],
        "styles": "bg-white rounded-xl shadow-2xl pl-14 pr-6 py-4",
        "icon": "Search left, green on focus",
        "focus": "focus:ring-4 focus:ring-green-300"
      },
      "form": {
        "usedIn": ["LoginPage", "SignUpPage", "ProfilePage"],
        "styles": "bg-gray-50 border border-gray-300 rounded-xl px-4 py-2",
        "focus": "focus:ring-2 focus:ring-green-500 focus:border-green-500"
      },
      "file": {
        "usedIn": ["ProfilePage"],
        "styles": "hidden input, custom button with camera icon"
      }
    },
    "cards": {
      "service": {
        "usedIn": ["ServicesPage", "HomePage"],
        "styles": "bg-white rounded-2xl shadow-lg p-6 hover:shadow-2xl hover:-translate-y-2",
        "border": "border border-gray-100",
        "elements": ["category badge top-right", "freelancer avatar", "title", "rating", "price"]
      },
      "stats": {
        "usedIn": ["ClientDashboard", "FreelancerDashboard"],
        "styles": "bg-linear-to-br from-[color] to-[color] rounded-2xl p-6 text-white",
        "colors": ["blue-500→blue-600", "purple-500→purple-600", "emerald-500→emerald-600", "amber-500→amber-600"]
      },
      "feature": {
        "usedIn": ["HomePage"],
        "styles": "bg-linear-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200",
        "hover": "hover:border-green-500 hover:shadow-2xl hover:-translate-y-2"
      },
      "message": {
        "usedIn": ["MessagesPage"],
        "styles": ["sent: green gradient right", "received: white left", "rounded-2xl shadow-lg"]
      },
      "review": {
        "usedIn": ["ServiceDetailPage"],
        "styles": "border-b, avatar + content layout"
      }
    },
    "navigation": {
      "sidebar": {
        "usedIn": ["All dashboard pages"],
        "styles": "fixed left bg-white shadow-lg collapsible",
        "width": ["expanded: 280px", "collapsed: 80px"],
        "items": "icon + text, hover green accent"
      },
      "topNavigation": {
        "usedIn": ["HomePage"],
        "styles": "bg-white/80 backdrop-blur-md sticky top shadow-lg",
        "logo": "green icon + FinancePro text"
      },
      "footer": {
        "usedIn": ["HomePage", "ServiceDetailPage"],
        "styles": "bg-white border-t border-gray-200 4-column grid",
        "links": "hover green, organized by sections"
      }
    },
    "other": {
      "starRating": {
        "usedIn": ["Service cards", "reviews", "ServiceDetailPage"],
        "styles": "yellow stars, sizes: sm/md/lg",
        "interactive": "clickable for reviews"
      },
      "loadingSpinner": {
        "usedIn": ["All pages for loading states"],
        "styles": "green color, animate-spin, full screen or inline"
      },
      "modal": {
        "usedIn": ["ConfirmModal", "InputModal", "ProfilePage add/edit"],
        "styles": "bg-white rounded-lg shadow-xl centered overlay backdrop blur"
      },
      "avatar": {
        "usedIn": ["Profile sections", "messages", "service cards"],
        "styles": "rounded-full with fallback icon hover effects"
      },
      "badge": {
        "usedIn": ["Status indicators", "category tags"],
        "styles": "rounded-full color variants green/blue/yellow/red"
      },
      "skeleton": {
        "usedIn": ["ServiceCardSkeleton", "OrderCardSkeleton"],
        "styles": "gray animated placeholders matching card layouts"
      }
    }
  },
  "pages": {
    "HomePage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Navigation Bar]                    │\n│ Logo + Menu + Auth Buttons          │\n├─────────────────────────────────────┤\n│ [Hero Section]                      │\n│ Title + Description + CTA Buttons   │\n│ + Floating Service Cards            │\n├─────────────────────────────────────┤\n│ [Features Section]                  │\n│ 4 Feature Cards Grid                │\n├─────────────────────────────────────┤\n│ [Services Section]                  │\n│ Service Cards + Popular Badge       │\n├─────────────────────────────────────┤\n│ [CTA Section]                       │\n│ Full-width green gradient           │\n├─────────────────────────────────────┤\n│ [Footer]                            │\n│ Links + Company Info                │\n└─────────────────────────────────────┘",
      "sections": ["Navigation", "Hero", "Features", "Services", "CTA", "Footer"],
      "components": ["Top Navigation", "Primary Button", "Secondary Button", "Feature Card", "Service Card", "Footer"]
    },
    "LoginPage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Background]                        │\n│ Gradient from-slate-50 to-green-50  │\n├─────────────────┬───────────────────┤\n│ [Form Card]     │ [Visual Side]     │\n│ White card      │ Gradient card     │\n│ Form fields     │ Welcome text      │\n│ Submit button   │ Features list     │\n└─────────────────┴───────────────────┘",
      "components": ["Form Input", "Primary Button", "Search Input (password with toggle)"]
    },
    "SignUpPage": {
      "layout": "Similar to LoginPage but with 4 form fields",
      "components": ["Form Input", "Primary Button", "Search Input (password with toggle)"]
    },
    "ClientDashboard": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Hero Search Banner]    │ │\n│         │ Dark overlay + Search   │ │\n│         ├─────────────────────────┤ │\n│         │ [Stats Cards] 3-col     │ │\n│         │ Blue/Yellow/Green       │ │\n│         ├─────────────────────────┤ │\n│         │ [Categories Grid]       │ │\n│         │ Service categories      │ │\n│         ├─────────────────────────┤ │\n│         │ [Platform Stats]        │ │\n│         │ 3 stats with icons      │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Search Input", "Stats Card", "Category Pills"]
    },
    "FreelancerDashboard": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Header Banner]         │ │\n│         │ Green gradient + CTA    │ │\n│         ├─────────────────────────┤ │\n│         │ [Stats Grid] 4-col      │ │\n│         │ Blue/Purple/Emerald/Amber│ │\n│         ├─────────────────────────┤ │\n│         │ [Order Status Cards]    │ │\n│         │ 3 cards with borders     │ │\n│         ├─────────────────────────┤ │\n│         │ [Recent Orders List]    │ │\n│         │ Table with status badges │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Primary Button", "Stats Card", "Badge"]
    },
    "ServicesPage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Search Header]         │ │\n│         │ Green gradient banner   │ │\n│         ├─────────────────────────┤ │\n│         │ [Category Pills]        │ │\n│         │ Horizontal scroll       │ │\n│         ├─────────────────────────┤ │\n│         │ [Services Grid]         │ │\n│         │ 1-4 columns responsive  │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Search Input", "Category Pills", "Service Card"]
    },
    "ServiceDetailPage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Hero Section]          │ │\n│         │ Service info + Rating   │ │\n│         ├─────────────────────────┤ │\n│         │ [Description Card]      │ │\n│         │ Service details         │\n│         ├─────────────────────────┤ │\n│         │ [Checklist Section]     │ │\n│         │ Client/Freelancer tasks │ │\n│         ├─────────────────────────┤ │\n│         │ [Reviews Section]       │ │\n│         │ Customer reviews        │ │\n│         ├─────────────────────────┤ │\n│         │ [Package Sidebar]       │ │\n│         │ Sticky pricing          │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Star Rating", "Review Card", "Primary Button", "Badge"]
    },
    "MessagesPage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Conversations List]    │ │\n│         │ Left panel, scrollable   │ │\n│         ├─────────────────────────┤ │\n│         │ [Chat Area]             │ │\n│         │ Header + Messages + Input│ │\n│         │ Right panel, full height │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Avatar", "Message Card", "Search Input", "Badge"]
    },
    "ProfilePage": {
      "layout": "┌─────────────────────────────────────┐\n│ [Sidebar] [Main Content]            │\n│         ┌─────────────────────────┐ │\n│         │ [Profile Header]        │ │\n│         │ Photo + Name + Edit     │ │\n│         ├─────────────────────────┤ │\n│         │ [Form Sections]         │ │\n│         │ Basic Info + Bio        │ │\n│         │ Skills/Education/Exp    │ │\n│         │ (Freelancer only)       │ │\n│         └─────────────────────────┘ │\n└─────────────────────────────────────┘",
      "components": ["Sidebar", "Avatar", "Form Input", "Primary Button", "Secondary Button", "Category Pills", "Modal"]
    },
    "additionalPages": [
      "ClientOnboardingPage",
      "FreelancerOnboardingPage",
      "ClientOrdersPage",
      "FreelancerOrdersPage",
      "CreateServicePage",
      "EditServicePage",
      "OrderCheckoutPage",
      "OrderDetailPage",
      "PublicProfilePage",
      "ReviewPage",
      "RoleSelectionPage",
      "WalletPage"
    ]
  },
  "icons": {
    "library": "Lucide React",
    "categories": {
      "navigation": ["Home", "User", "Briefcase", "MessageSquare", "Wallet", "Settings", "LogOut", "SidebarToggle"],
      "actions": ["Search", "Plus", "Edit2", "Save", "X", "Trash2", "Camera", "Upload", "Download", "Send", "ArrowLeft"],
      "status": ["CheckCircle", "Clock", "AlertCircle", "XCircle", "RefreshCcw"],
      "rating": ["Star"],
      "services": ["FileText", "DollarSign", "TrendingUp", "Package", "Shield", "Award", "Calendar"],
      "ui": ["ChevronLeft", "ChevronRight", "Menu", "Eye", "EyeOff", "Filter"],
      "communication": ["MessageSquare", "Mail"],
      "user": ["UserIcon", "MapPin"]
    }
  },
  "effects": {
    "hover": ["transform hover:scale-105", "hover:-translate-y-2"],
    "transitions": "transition-all duration-300",
    "shadows": ["shadow-lg", "shadow-2xl", "shadow-[color]/50"],
    "backdrop": ["backdrop-blur-md", "backdrop-blur-sm"],
    "animations": ["animate-spin", "animate-fade-in", "animate-pulse"]
  },
  "spacing": {
    "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8",
    "section": "py-24 (96px), py-16 (64px), py-12 (48px)",
    "card": "p-6 (24px), p-8 (32px)",
    "element": "space-x-4 (16px), space-y-8 (32px)"
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "grids": {
      "1col": "mobile default",
      "2col": "md:grid-cols-2 (768px+)",
      "3col": "lg:grid-cols-3 (1024px+)",
      "4col": "xl:grid-cols-4 (1280px+)"
    },
    "utilities": ["text-lg md:text-xl lg:text-2xl", "px-4 sm:px-6 lg:px-8", "flex-col sm:flex-row"]
  },
  "implementation": {
    "figmaStructure": {
      "Components": ["Buttons", "Cards", "Inputs", "Navigation", "Other"],
      "Pages": ["HomePage", "Authentication", "Dashboard", "Services", "MessagesPage", "ProfilePage", "Other Pages"],
      "Assets": ["Icons (Lucide React)", "Images", "Logos"],
      "Styles": ["Colors", "Typography", "Effects"]
    },
    "steps": [
      "Import color palette as Figma color styles",
      "Create master components with variants",
      "Build page layouts using components",
      "Add responsive variants (mobile/tablet/desktop)",
      "Setup prototyping for interactions"
    ],
    "checklist": [
      "All colors implemented",
      "Typography scales applied",
      "Components with variants created",
      "All pages laid out",
      "Responsive breakpoints tested",
      "Hover states defined",
      "Icons sized and colored",
      "Spacing consistent",
      "Accessibility considered"
    ]
  },
  "usage": {
    "colorPatterns": {
      "primary": "Green gradients",
      "secondary": "Gray with green borders",
      "success": "Green (#22c55e)",
      "warning": "Amber/Yellow",
      "info": "Blue",
      "neutral": "Gray scale"
    },
    "componentVariants": {
      "buttons": ["Primary", "Secondary", "Modal"],
      "cards": ["Service", "Stats", "Feature", "Message", "Review"],
      "inputs": ["Search", "Form", "File"],
      "navigation": ["Sidebar", "Top Nav", "Footer"],
      "status": ["Pending (yellow)", "In Progress (blue)", "Completed (green)"]
    },
    "quickReference": {
      "backgrounds": "bg-white, bg-gray-50, bg-linear-to-r from-green-600 to-green-700",
      "text": "text-gray-900, text-gray-600, text-white",
      "borders": "border border-gray-200, rounded-xl, rounded-2xl",
      "shadows": "shadow-lg, shadow-2xl",
      "spacing": "p-6, m-4, space-y-4"
    }
  }
}